<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prediccionvertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TXTO"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvV"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvT"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/i3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cuatro"
        tools:srcCompat="@drawable/cuatro" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/i1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dos"
        tools:srcCompat="@drawable/dos" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/i2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tres"
        tools:srcCompat="@drawable/tres" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/tvV"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uno"
        tools:srcCompat="@drawable/uno" />


</android.support.constraint.ConstraintLayout>